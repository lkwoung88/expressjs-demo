<!DOCTYPE html>
<html>
<head>
    <title>Sign Up - Retro Currency Converter</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="container">
        <nav class="nav-menu">
            <div class="nav-left"></div>
            <div class="nav-center">
                <a href="/" class="nav-logo">¥€$</a>
            </div>
            <div class="nav-right">
            </div>
        </nav>

        <main class="auth-container">
            <h2>SIGN UP</h2>
            <div class="retro-line"></div>

            <form action="/member/signup" method="POST" class="auth-form">
                <div class="input-group">
                    <label for="username">Username:</label>
                    <input type="text" id="username" name="username" required>
                </div>

                <div class="input-group">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" required>
                </div>

                <div class="input-group">
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="password" required>
                </div>

                <div class="input-group">
                    <label for="confirm-password">Confirm Password:</label>
                    <input type="password" id="confirm-password" name="confirmPassword" required>
                </div>

                <button type="submit" class="convert-btn" onclick="return validatePasswords()">Sign Up</button>
            </form>

            <p class="auth-switch">Already have an account? <a href="/auth/signin">signin here</a></p>
        </main>

        <footer>
            <div class="retro-line"></div>
            <p>© <%= new Date().getFullYear() %> Retro Currency Converter</p>
            <p class="vintage-text">Best viewed with Netscape Navigator</p>
        </footer>
    </div>
<script>
    function validatePasswords() {
        if(document.getElementById("username").value.length < 3) {
            alert("사용자 이름은 3자 이상이어야 합니다.");
            return false;
        }
        if(document.getElementById("password").value.length < 6) {
            alert("패스워드는 6자 이상이어야 합니다.");
            return false;
        }
        var password = document.getElementById("password").value;
        var confirmPassword = document.getElementById("confirm-password").value;
        if (password !== confirmPassword) {
            alert("패스워드, 패스워드 확인이 일치하지 않습니다.");
            return false;
        }
        return true;
    }
</script>
</body>
</html>
